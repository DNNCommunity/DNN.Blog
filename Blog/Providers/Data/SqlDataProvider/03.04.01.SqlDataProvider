@EntryID as Int,
@ShowNonApproved bit=0
AS

SELECT
	C.[CommentID],
	C.[EntryID],
	C.[UserID],
	C.[Title],
	C.[Comment],
	C.[AddedDate],
	U.[UserName],
	U.[FirstName] + ' ' + U.[LastName] AS UserFullName,
	C.[Author],
	C.[Approved],
	C.[Website],
