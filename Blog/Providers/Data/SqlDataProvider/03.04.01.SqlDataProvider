		INNER JOIN dbo.Blog_Entries E ON S.EntryID = E.EntryID
		INNER JOIN dbo.Blog_Blogs B ON B.[BlogID] = E.[BlogID]  
		INNER JOIN dbo.Users U ON B.[UserID] = U.[UserID]

Order by S.Rank DESC, E.AddedDate DESC, E.PermaLink DESC

set nocount off


